<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	tools:context=".MainActivity" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
	        
	        <ToggleButton
		        android:id="@+id/tglGps"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:minHeight="24dp"
		        android:minWidth="32dp"
		        android:textOff="@string/tgl_gps_sim"
		        android:textOn="@string/tgl_gps_nav" />
	        
	        <ToggleButton
		        android:id="@+id/tglBikeCar"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:minHeight="24dp"
		        android:minWidth="32dp"
		        android:textOff="@string/tgl_mode_car"
		        android:textOn="@string/tgl_mode_bike" />

	        <EditText
	            android:id="@+id/txtAddress"
	            android:inputType="text"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:imeActionLabel="Find"
	            android:ems="10" />

	        <TextView
	            android:id="@+id/lblSpeed"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="right" />
	        
    </LinearLayout>

    <org.mapsforge.android.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    
</LinearLayout>    
